<section class="bg-primary">
  <div class="px-8 2xl:max-w-7xl mx-auto py-6">
    <div class="mt-6 space-y-2">
    <div>
      <h3
      class="text-secondary text-base font-medium"
      data-aos="fade-up"
      data-aos-duration="1500"
    >
      <span>About</span>
      <span class="font-bold">Me</span>
    </h3>
    </div>
    <div class="grid grid-cols-1 lg:grid-cols-3 text-secondary mx-auto my-auto gap-6">
      <img class="lg:col-start-2 my-auto mx-auto border-4 lg:w-64 border-secondary rounded-full" 
      src="https://media.licdn.com/dms/image/v2/C4D03AQF45Js8icOJ0w/profile-displayphoto-shrink_200_200/profile-displayphoto-shrink_200_200/0/1570628862405?e=1736380800&v=beta&t=yPevhVkVJ3Zy0gIK_LeQifMlkm5g4Hf2OPDcElfzik4"
